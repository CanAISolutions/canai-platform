{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "incremental": true,
    "paths": {
      "@/*": ["../*"],
      "@backend/*": ["./*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "testEnvSetup.js"],
  "exclude": ["node_modules", "dist", "coverage"]
}
